generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  user_id        Int       @id @default(autoincrement())
  user_name      String
  user_email     String    @unique 
  user_role      String
  password       String
  incidents incident[]
  comments  comment[]
}

model room {
  room_id        Int       @id @default(autoincrement())
  room_name      String
  incidents incident[]
}

model incident {
  incident_id          Int       @id @default(autoincrement())
  incident_title       String
  incident_description String
  incident_created_at   DateTime  @default(now())
  user        user      @relation(fields: [user_id], references: [user_id])
  user_id      Int
  category    category  @relation(fields: [category_id], references: [category_id])
  category_id  Int
  status      status    @relation(fields: [status_id], references: [status_id])
  status_id    Int
  room        room      @relation(fields: [room_id], references: [room_id])
  room_id      Int
  comments    comment[]
}

model category {
  category_id        Int       @id @default(autoincrement())
  category_name      String
  incidents incident[]
}

model status {
  status_id        Int       @id @default(autoincrement())
  status_name      String
  incidents incident[]
}

model comment {
  comment_id         Int       @id @default(autoincrement())
  comment_content    String
  comment_createdAt  DateTime  @default(now())
  user       user      @relation(fields: [user_id], references: [user_id])
  user_id     Int
  incident   incident  @relation(fields: [incident_id], references: [incident_id])
  incident_id Int
}
